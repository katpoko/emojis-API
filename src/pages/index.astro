---
// Import Stylesheet
import '../styles/global.css';

// data source
// replace temporary JSON placeholder API
const source = 'https://emojihub.yurace.pro/api/all';
// fetch the data
const res = await fetch(source); 
// store retreived data
const data = await res.json();
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<!-- Normalize CSS -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">

		<title>Emoji Hub API</title>
	</head>
	<body>
		
		<header class="masthead">
			<h1 class="site-title">Emojis</h1>
		</header>

		<main id="content" class="main-area">

			<ul class="cards">
		  
				<!-- Your API Data -->
				{
					data.map( item =>
					<li class="card-item">
						<a href="#">
							<figure class="card">
							
							<figcaption class="caption">
								<h3 class="caption-title">{item.name}</h3>
								<p>{item.category}</p>
								<footer>{item.unicode}</footer>
							</figcaption>
							</figure>
						</a>
					</li> 
					)
				}
		  
			</ul>
		  </main>
		  


	</body>
</html>
